{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Prod",
            "smartStep": true,
            "program": "${workspaceFolder}/dist/server.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {                
                "NODE_ENV" : "production",
            },
            "outFiles": [
                "${workspaceRoot}/dist/*.{js,.js.map}"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Dev",
            "smartStep": true,
            "program": "${workspaceFolder}/src/index.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "NODE_ENV" : "development",        
            },
            "runtimeArgs": [
                "--nolazy",
                "--require",
                "@babel/register"
            ],
        },
    ]
}
{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Client",
            "port": 9222,
            "trace": true,
            "timeout": 1000,
            "smartStep": true,
            "webRoot": "${workspaceFolder}",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "${workspaceRoot}/node_modules/**/*.*.js",
                "<node_internals>/**/*.js",
                "<node_internals>/**/*.*.js",
                "node_modules/**/*.js",
                "${workspaceRoot}\\node_modules/**\\*.js",     
                "file:\\webpack\\bootstrap",
                "file:///webpack/bootstrap",
 
                "webpack:///webpack/bootstrap",
                "webpack://webpack/bootstrap",
                "webpack\\bootstrap", 
                "webpack-internal://**/*.js",                   
            ],
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Server",
            "processId": "${command:PickProcess}",
            "protocol": "inspector",
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/*.{.js.map}"
            ],
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js",
                "*.hbs",
                "webpack:///webpack/bootstrap",
                "webpack:\\webpack\\bootstrap",
                "webpack://webpack/bootstrap",
                "webpack/bootstrap",
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Dev Server Setup",
            "smartStep": true,
            "program": "${workspaceFolder}/src/index.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "NODE_ENV" : "development",
                "ENABLE_LOGGING" : "false"        
            },
            "runtimeArgs": [
                "--lazy",
                "--require",
                "@babel/register"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/*.{js,.js.map}"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Prod Build",
            "smartStep": true,
            "program": "${workspaceFolder}/dist/server.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {                
                "NODE_ENV" : "production",
                "ENABLE_LOGGING" : "false"
            },

        },
    ]
}
{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}",
            "smartStep": true,
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],        
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "smartStep": true,
            "processId": "${command:PickProcess}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Prod",
            "smartStep": true,
            "program": "${workspaceFolder}/dist/server.js",
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {                
                "NODE_ENV" : "production",
                "DEBUG" : "false"
            },

        },

    ]
}
{
  "presets": [
    ["@babel/preset-env", {
      "targets" : {
        "node" : "current"
      }
    }], 
    "@babel/preset-react",
    ["@babel/stage-0", {"decoratorsLegacy" : true}]
  ],
  "env" : {
    "test" : {
      "plugins" : [
        "istanbul", 
        "rewire-exports"
      ]
    },
    "development" : {
        "presets": [
          ["@babel/preset-env", {
            "targets": {
              "browsers": ["last 2 Chrome versions"],
              "node" : "current"
            }
          }]
        ] 
    },
    "production" : {
      "presets": [
        ["@babel/preset-env", {"modules" : false}]
      ]
    }
  }
}

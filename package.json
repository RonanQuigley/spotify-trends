{
  "name": "spotify",
  "version": "1.0.0",
  "main": "./build/server/app.js",
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "express-handlebars": "^3.0.0",
    "morgan": "^1.9.0",
    "nodemon": "^1.14.11",
    "querystring": "^0.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reload": "^2.2.2",
    "request": "^2.83.0",
    "source-map-support": "^0.5.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "dotenv": "^4.0.0",
    "mkdirp": "^0.5.1",
    "mongodb": "^3.0.1",
    "npm-run-all": "^4.1.2",
    "util": "^0.10.3",
    "webpack": "^3.10.0"
  },
  "config": {
    "ext" : "js,jsx,css,scss,hbs"
  },
  "scripts": {
    "copy:views": "mkdirp ./build/views && cp -R ./app/views/. ./build/views",
    "build:react-client": "webpack --progress --colors",
    "build:server": "babel ./app/server -d ./build/server --source-maps --watch",
    "build:react-server": "babel ./app/react -d ./build/react/ --source-maps --watch",
    "build:dev": "npm-run-all -p build:server build:react-client build:react-server",
    "set:debug" : "set DEBUG=* node ./build/server/app.js",
    "set:no-debug" : "node ./build/server/app.js",
    "watch:views": "nodemon -e %npm_package_config_ext% --watch app/views/ --exec npm run copy:views",
    "watch:build": "nodemon -e %npm_package_config_ext% --watch build/ npm run set:no-debug",
    "watch:debug" : "nodemon -e %npm_package_config_ext% --watch build/ npm run set:debug",  
    "start:watch-debug": "npm-run-all -p build:dev watch:debug",
    "start:watch-no-debug": "npm-run-all -p build:dev watch:views watch:build"
  },
  "author": "Ronan Quigley",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RonanQuigley/spotify-trends.git"
  },
  "bugs": {
    "url": "https://github.com/RonanQuigley/spotify-trends/issues"
  },
  "homepage": "https://github.com/RonanQuigley/spotify-trends#readme"
}

{
  "name": "spotify",
  "version": "1.0.0",
  "main": "./build/server/app.js",
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "express-handlebars": "^3.0.0",
    "express-session": "^1.15.6",
    "morgan": "^1.9.0",
    "nodemon": "^1.14.11",
    "querystring": "^0.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "reload": "^2.2.2",
    "request": "^2.83.0",
    "source-map-support": "^0.5.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "mkdirp": "^0.5.1",
    "mongodb": "^3.0.1",
    "npm-run-all": "^4.1.2",
    "util": "^0.10.3",
    "webpack": "^3.10.0"
  },
  "scripts": {
    "copy:views": "mkdirp ./build/views && cp -R ./app/views/. ./build/views",
    "build:client": "webpack --progress --colors",
    "build:server": "babel ./app/server -d ./build/server --source-maps --watch",
    "build:react": "babel ./app/react -d ./build/react/ --source-maps --watch",
    "build:dev": "npm-run-all -p build:server build:client build:react watch:views",
    "build:start": "npm run build:dev && node build/server/app.js",
    "watch:views" : "nodemon -e js,hbs,css,scss,jsx --watch ./app/views/ --exec npm run copy:views",
    "watch:build": "nodemon --watch build/",    
    "start": "npm-run-all -p build:dev watch:build"
  },
  "author": "Ronan Quigley",

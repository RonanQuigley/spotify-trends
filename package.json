  "scripts": {
    "build:back-end": "webpack -p --config webpack/back-end/webpack.prod.babel.js",
    "build:front-end": "webpack --config webpack/front-end/webpack.prod.babel.js",
    "build:full-stack": "webpack --config webpack/full-stack/webpack.babel.js",
    "build:full-stack:start": "npm-run-all -s build:full-stack start:prod",
    "start:prod": "node ./dist/server.js",
    "start": "cross-env NODE_ENV=development node --require @babel/register --require dotenv/config ./src/index.js",
    "watch:lint": "node node_modules/eslint-watch/bin/esw -w --fix",
    "test:front-end": "mocha-webpack --watch --webpack-config ./webpack/front-end/webpack.dev.js \"test/front-end/**/*.test.js\"",
    "test:back-end": "mocha-webpack --watch --webpack-config ./webpack/back-end/webpack.dev.js \"test/back-end/**/*.test.js\"",
    "test": "npm-run-all -p test:front-end test:back-end"
